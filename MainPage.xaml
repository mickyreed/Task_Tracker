<Page
    x:Class="TaskList.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="InputTextBox" BorderBrush="AliceBlue" BorderThickness="2" PlaceholderText="Enter a value" Margin="20"/>
        <Button Grid.Column="1" Grid.Row="4" Content="Submit" Click="Button_Click"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"/>
        <TextBlock Grid.Column="1" Grid.Row="6" x:Name="ResultTextBlock" FontSize="18" HorizontalAlignment="Center" Margin="20" TextWrapping="Wrap"/>
    </Grid>
</Page>

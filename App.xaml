<Application
    x:Class="TaskList.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskList"
    RequestedTheme="Light">

    <Application.Resources>
        <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="White" Offset="0.0"/>
            <!-- #2D2D30 -->
            <GradientStop Color="LightGray" Offset="1.0"/>
            <!-- #333333 -->
        </LinearGradientBrush>
        <local:DueDateColorConverter x:Key="DueDateColorConverter" />
        <local:CompletedTaskColorConverter x:Key="CompletedTaskColorConverter"/>
        <local:CompletedTaskTextDecorationConverter x:Key="CompletedTaskTextDecorationConverter"/>
    </Application.Resources>
</Application>
